header
  height 400px
  width 100%
  & h1
    font-family "Sigmar One"
    font-size fuente-titulo
    color: #fff
    position absolute
    top top-title
    margin-left auto
    margin-right auto
    display block
    text-align: center;

    &:after
      content ''
      background url('../img/marte.png') no-repeat
      height 400px
      display block
      -webkit-animation planeta-movimiento 10s infinite linear
