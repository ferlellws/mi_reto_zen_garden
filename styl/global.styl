    font-size fuente-subtitulo
    color: #fff
    position absolute
    top top-subtitle
    margin-left auto
    margin-right auto
    display block
    width: 100%;
    text-align: center;
    top: -280px;

    & abbr
      position relative
      z-index: 2000;

    &:before
      content: "";
      background: url('../img/tierra.png') no-repeat scroll 0% 0% transparent;
      height: 400px;
      display: block;
      position: relative;
      top: 400px;
      z-index: 2000;
      -webkit-animation tierra-movimiento 5s infinite linear
      -moz-animation tierra-movimiento 5s infinite linear
      -o-animation tierra-movimiento 5s infinite linear
      animation tierra-movimiento 5s infinite linear

    &:after
      content: "";
      background: url('../img/saturno.png') no-repeat scroll center center transparent;
      height: 400px;
      display: block;
      position: relative;
      top: -50px;
      -webkit-animation planeta2-movimiento 20s infinite linear
      -moz-animation planeta2-movimiento 20s infinite linear
      -o-animation planeta2-movimiento 20s infinite linear
      animation planeta2-movimiento 20s infinite linear

header:before
