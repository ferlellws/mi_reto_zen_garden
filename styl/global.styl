// Movil
@media screen and (min-width: 120px)
  header
    & h1
      font-size fuente-titulo - 20px
      top top-title

    & h2
      font-size fuente-subtitulo - 10px
      //top top-subtitle - 30px

  header:after
    height: 150px
    background-size: 200px
    top: -100px
    -webkit-animation: cohete-movimiento 2.5s infinite linear
    -moz-animation: cohete-movimiento 2.5s infinite linear
    -o-animation: cohete-movimiento 2.5s infinite linear
    animation: cohete-movimiento 2.5s infinite linear

@media screen and (max-width: 320px)
  header
    width 320px
    & h1
      margin auto
      width 100%
      font-size 20px
    & h2
      width 320px
      top -300px
  header:after
    height: 150px
    background-size: 200px
    top: -200px
    -webkit-animation: cohete-movimiento 2.5s infinite linear
    -moz-animation: cohete-movimiento 2.5s infinite linear
    -o-animation: cohete-movimiento 2.5s infinite linear
    animation: cohete-movimiento 2.5s infinite linear

  .summary
    max-width 320px
    font-size .9em
    box-sizing border-box

  .preamble
    width 320px
    box-sizing border-box
    & h3
      font-size 20px
    & p
      width 100%
      font-size 15px
    & p:nth-child(2):after, & p:nth-child(2):before
      display none

  .main
    max-width 320px
    .explanation, .participation, benefits, requirements
      width 100%
      clear both
      padding 80px 40px 0 40px
    .participation
      padding-bottom 40px
    .requirements:after
      font-size 40px

    footer
      height 150px
      overflow hidden
      & a
        display block
        width 100%
        font-size 15px
        text-align center
        margin 0
        padding 5px 0 5px 0
      & a:firs-child
        padding-top 40px
@media screen and (min-width: 480px)
  header:after
    height: 200px
    background-size: 250px
    top: -200px
    -webkit-animation: cohete-movimiento 2.5s infinite linear
    -moz-animation: cohete-movimiento 2.5s infinite linear
    -o-animation: cohete-movimiento 2.5s infinite linear
    animation: cohete-movimiento 2.5s infinite linear
  & h1
    width 100%
    text-align: center;

